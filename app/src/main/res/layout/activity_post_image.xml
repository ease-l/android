<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gr2.a2016.ease_l.PostImage">

    <ImageView
        android:src="@drawable/image_img"
        android:layout_width="373dp"
        android:layout_height="258dp"
        tools:layout_editor_absoluteY="7dp"
        android:id="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_post_image"
        app:layout_constraintRight_toRightOf="@+id/activity_post_image"
        app:layout_constraintHorizontal_bias="0.81"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="373dp"
        android:layout_height="59dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:selectAllOnFocus="false"
        android:hint="Name"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Post"
        android:layout_width="89dp"
        android:layout_height="49dp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="376dp"
        android:id="@+id/button" />
</RelativeLayout>
